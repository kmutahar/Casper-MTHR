{{!-- Add Creative Commons Licence depending on internal tag--}}
<section style="margin-top: 25px; margin-bottom: 50px;">
    <center>
        {{#has tag="#cc-by-sa-v4"}}
            <p xmlns:dct="http://purl.org/dc/terms/" xmlns:cc="http://creativecommons.org/ns#" class="license-text">
                <a rel="cc:attributionURL" href="{{url absolute="true"}}"><span rel="dct:title">{{title}}</span></a> by
                <span rel="cc:attributionName">{{authors}}</span> <br> CC BY-NC-SA 4.0
                <a href="https://creativecommons.org/licenses/by-nc-sa/4.0">
                    <img style="height:22px!important;margin-left: 3px;vertical-align:text-bottom;" src="{{asset "assets/license-code/cc.svg"}}" />
                    <img style="height:22px!important;margin-left: 3px;vertical-align:text-bottom;" src="{{asset "assets/license-code/by.svg"}}" />
                    <img style="height:22px!important;margin-left: 3px;vertical-align:text-bottom;" src="{{asset "assets/license-code/nc.svg"}}" />
                    <img style="height:22px!important;margin-left: 3px;vertical-align:text-bottom;" src="{{asset "assets/license-code/sa.svg"}}" />
                </a>
            </p>
        {{/has}}
    </center>
</section>


